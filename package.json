  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/drawio-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "jsdom": "^19.0.0",
    "mxgraph": "^4.2.2",
